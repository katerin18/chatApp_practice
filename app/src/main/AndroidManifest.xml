<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chat">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chat">

        <activity
            android:name=".adapter.showChat"
            android:exported="false" />
        <activity
            android:name=".activity.searchUsersDialog"
            android:exported="false" />
        <activity
            android:name=".fragments.ImageProfile"
            android:exported="false" />
        <activity
            android:name=".activity.Navigation"
            android:exported="false" />
        <activity
            android:name=".activity.ProfileScreen"
            android:exported="false" />
        <activity
            android:name=".activity.SignScreen"
            android:exported="false" />
        <activity
            android:name=".activity.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" />

        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />

        <receiver
            android:name=".Receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>