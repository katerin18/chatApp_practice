<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/but_text"
    tools:context=".fragments.ChatsFragment">


    <ImageView
        android:id="@+id/ch_back"
        android:layout_width="533dp"
        android:layout_height="376dp"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="120dp"
        android:rotation="270"
        android:scaleY="-1"
        android:src="@drawable/lisiss" />

    <TextView
        android:id="@+id/txt_chats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/kameron"
        android:text="Chats"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="13dp"
        android:textAlignment="center"
        android:background="@color/nav_color"/>

    <Button
        android:id="@+id/btn_newDialogs"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_button"
        android:text="+"
        android:textAlignment="center"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/backTitle"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add dialogs!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:fontFamily="@font/kameron"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_user"/>

</FrameLayout>